generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// Auth Models (NextAuth.js)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  accounts      Account[]
  sessions      Session[]

  submittedParks Park[]         @relation("SubmittedParks")
  favorites      UserFavorite[]
  uploadedPhotos ParkPhoto[]
  reviews        ParkReview[]
  helpfulVotes   ReviewHelpfulVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  USER
  ADMIN
}

// Park Models
model Park {
  id            String     @id @default(cuid())
  name          String
  slug          String     @unique
  latitude      Float?
  longitude     Float?
  website       String?
  phone         String?
  campingWebsite String?
  campingPhone   String?
  dayPassUSD    Float?
  milesOfTrails Int?
  acres         Int?
  notes         String?    @db.Text
  status        ParkStatus @default(PENDING)

  // New operational fields
  datesOpen              String?
  contactEmail           String?
  ownership              Ownership?
  permitRequired         Boolean?
  permitType             String?
  membershipRequired     Boolean?
  maxVehicleWidthInches  Int?
  flagsRequired          Boolean?
  sparkArrestorRequired  Boolean?
  noiseLimitDBA          Int?

  // Aggregated review data
  averageRating            Float?
  averageDifficulty        Float?
  averageTerrain           Float?
  averageFacilities        Float?
  reviewCount              Int                   @default(0)
  averageRecommendedStay   RecommendedDuration?

  submittedBy   User?   @relation("SubmittedParks", fields: [submitterId], references: [id])
  submitterId   String?
  submitterName String? // For anonymous submissions

  terrain      ParkTerrain[]
  amenities    ParkAmenity[]
  camping      ParkCamping[]
  vehicleTypes ParkVehicleType[]
  favorites    UserFavorite[]
  photos       ParkPhoto[]
  reviews      ParkReview[]
  address      Address?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([averageRating])
}

enum ParkStatus {
  PENDING
  APPROVED
  REJECTED
  DRAFT
}

// Junction tables for many-to-many relationships
model ParkTerrain {
  id      String  @id @default(cuid())
  parkId  String
  terrain Terrain

  park Park @relation(fields: [parkId], references: [id], onDelete: Cascade)

  @@unique([parkId, terrain])
}

model ParkAmenity {
  id      String  @id @default(cuid())
  parkId  String
  amenity Amenity

  park Park @relation(fields: [parkId], references: [id], onDelete: Cascade)

  @@unique([parkId, amenity])
}

model ParkCamping {
  id      String  @id @default(cuid())
  parkId  String
  camping Camping

  park Park @relation(fields: [parkId], references: [id], onDelete: Cascade)

  @@unique([parkId, camping])
}

model ParkVehicleType {
  id          String      @id @default(cuid())
  parkId      String
  vehicleType VehicleType

  park Park @relation(fields: [parkId], references: [id], onDelete: Cascade)

  @@unique([parkId, vehicleType])
}

// Enums matching your existing types
enum Terrain {
  sand
  rocks
  mud
  trails
  hills
  motocrossTrack
}

enum Amenity {
  restrooms
  showers
  food
  fuel
  repair
  boatRamp
  loadingRamp
  picnicTable
  shelter
  grill
  playground
  wifi
  fishing
  airStation
  trailMaps
  rentals
  training
  firstAid
  store
}

enum Camping {
  tent
  rv30A
  rv50A
  fullHookup
  cabin
  groupSite
  backcountry
}

enum VehicleType {
  motorcycle
  atv
  sxs
  fullSize
}

enum Ownership {
  private
  public
  mixed
  unknown
}

// Address Model (one-to-one with Park)
model Address {
  id             String  @id @default(cuid())
  parkId         String  @unique
  streetAddress  String?
  streetAddress2 String?
  city           String?
  state          String  // Required for state-based filtering
  zipCode        String?
  county         String?
  latitude       Float?
  longitude      Float?

  park Park @relation(fields: [parkId], references: [id], onDelete: Cascade)

  @@index([state])
}

// User Favorites
model UserFavorite {
  id     String @id @default(cuid())
  userId String
  parkId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  park Park @relation(fields: [parkId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, parkId])
  @@index([userId])
}

// Park Photos
model ParkPhoto {
  id      String      @id @default(cuid())
  parkId  String
  userId  String?
  url     String
  caption String?     @db.Text
  status  PhotoStatus @default(PENDING)

  park Park  @relation(fields: [parkId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parkId])
  @@index([userId])
  @@index([status])
}

enum PhotoStatus {
  PENDING
  APPROVED
  REJECTED
}

// Review System
enum ReviewStatus {
  PENDING
  APPROVED
  HIDDEN
}

enum VisitCondition {
  dry
  muddy
  snow
  wet
  mixed
}

enum RecommendedDuration {
  quickRide
  halfDay
  fullDay
  overnight
}

model ParkReview {
  id                  String              @id @default(cuid())
  parkId              String
  userId              String

  // Ratings (1-5)
  overallRating       Int
  terrainRating       Int
  facilitiesRating    Int
  difficultyRating    Int

  // Content
  title               String?
  body                String              @db.Text
  visitDate           DateTime?

  // Optional fields
  vehicleType         VehicleType?
  visitCondition      VisitCondition?
  recommendedDuration RecommendedDuration?
  recommendedFor      String?

  // Status
  status              ReviewStatus        @default(PENDING)

  // Relations
  park                Park                @relation(fields: [parkId], references: [id], onDelete: Cascade)
  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  helpfulVotes        ReviewHelpfulVote[]

  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  @@unique([userId, parkId])
  @@index([parkId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model ReviewHelpfulVote {
  id        String   @id @default(cuid())
  reviewId  String
  userId    String

  review    ParkReview @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, reviewId])
  @@index([reviewId])
}
